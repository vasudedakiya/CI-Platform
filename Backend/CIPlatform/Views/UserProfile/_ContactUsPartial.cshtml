@using CIPlatform.Models
@model ContactUsModel

<div class="modal fade" id="contactUs">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Contact Us</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"
                        aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="modalForm" action="ContactUs">
                    <input asp-for="UserId" hidden/>
                    <div class="mt-1">
                        <label class="float-start">Name*</label>
                        <input type="text" disabled value="@Model.UserName" asp-for="UserName" class="form-control"
                               placeholder="Enter old password">
                    </div>
                    <div class="mt-4">
                        <label class="float-start">Email Address*</label>
                        <input type="email" disabled value="@Model.UserEmail" asp-for="UserName" class="form-control"
                               placeholder="Enter new password">
                    </div>
                    <div class="mt-4">
                        <label class="float-start">Subject*</label>
                        <input type="text" asp-for="Subject" class="form-control" placeholder="Enter new password">
                    </div>
                    <div class="mt-4 mb-2">
                        <label for="" class="float-start">Message*</label>
                        <br>
                        <textarea asp-for="Message" class="form-control" placeholder="Enter your Message"
                                  class="w-100 h-100"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary rounded-pill px-5"
                        data-bs-dismiss="modal">
                    Cancel
                </button>
                <button type="submit" data-bs-save="modal" class="btn btn-outline-warning rounded-pill px-5">
                    Save
                </button>
            </div>
        </div>
    </div>
</div>