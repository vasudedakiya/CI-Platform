@using CIPlatform.DataModels
@model Admin

@*tabindex="-1" aria-labelledby="AddUserlLabel" aria-hidden="true"*@
<div class="modal fade" id="AddUser">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add new Admin</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"
                        aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <form id="modalForm" action="CreateAdmin">

                        <div class="col-12 mt-3">
                            <label asp-for="FirstName">First Name</label>
                            <input type="text" name="FirstName" asp-for="FirstName" class="form-control"
                                   placeholder="Enter First Name" id="">
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="col-12 mt-3">
                            <label asp-for="LastName">Last Name</label>
                            <input type="text" name="LastName" asp-for="LastName" class="form-control"
                                   placeholder="Enter Last Name" id="">
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                        <div class="col-12 mt-3">
                            <label asp-for="Email">Email id</label>
                            <input type="text" asp-for="Email" name="Email" class="form-control" placeholder="Enter Email"
                                   id="">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="col-12 mt-3">
                            <label asp-for="Password">Password</label>
                            <input type="password" asp-for="Password" name="Password" class="form-control" placeholder="Enter Password"
                                   id="txtPassword">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="col-12 mt-3">
                            <label for="">Confirm Password</label>
                            <input type="password" name="" class="form-control"
                                   placeholder="Confirm Password" id="txtConfirmPassword">
                        </div>
                        <span class="text-danger">@TempData["ErrorMes"]</span>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary rounded-pill"
                        data-bs-dismiss="modal">
                    Cancel
                </button>
                <button type="button" onclick="return Validate();" data-bs-save="modal" class="btn btn-outline-warning rounded-pill">Submit</button>
            </div>
        </div>
    </div>
</div>s