@using CIPlatform.DataModels
@model Story

<div class="modal fade" id="SuggestWorker">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Suggest Co-Worker</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"
                        aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <form id="modalForm" method="post" action="SuggestCoWorker">
                        <input asp-for="StoryId" hidden />
                        <div class="col-12 mt-3">
                            <label >Email</label>
                            <input type="text" class="form-control" name="WorkerEmail" placeholder="Enter Email" id="" />
                        </div>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary rounded-pill"
                        data-bs-dismiss="modal">
                    Cancel
                </button>
                <button type="button" onclick="return suggestCoWorker()" class="btn btn-outline-warning rounded-pill">Send</button>
            </div>
        </div>
    </div>
</div>